<div class="container">
  <div class="breadcrumbs-container">
  	<%= render_breadcrumbs :separator=>"/" %>
  </div>
  <% flash.each do |key, value| %>
    <div class="alert alert-danger"><%= value %></div>
  <% end %>
	<div class="review-form-container">
		<div class="heading">
			<h4>Post review</h4>
		</div>
		<div class="review-form">
			<%= form_for @review, url: dish_reviews_path  do |f| %>
				<div id='rating-form' class='form-group'>
					<label class="rating">Rating</label>
				</div>
				<div class="row form-group">
					<div class="col-md-2">
						<%=f.label :review %>
					</div>
					<div class="col-md-10">
						<%=f.text_area :review,class: 'form-control', validate: { presence: true }%>
					</div>
				</div>
				<div class="row d-flex justify-content-between">
					<%= link_to 'Cancel',{:controller => "dishes", :action => "show",:id=>params[:dish_id]},class: 'btn btn-warning' %>
					<%=f.submit 'Save',class: 'btn btn-success'	%>
				</div>
			<% end %>
		</div>
	</div>
</div>	
<script type="text/javascript">
	Ratings();
</script>