<div class="form-wrapper">	
	<div class="user-form-container">
		<div class="form-title">
			<span>Create User</span>
		</div>
		<%= form_with model: @user,url: admin_users_path,class: "contact100-form validate-form" do |user_form| %>
		<div class="form-group input-group user-input">
			<div class="input-group-prepend user-label-input">
				<span class="input-group-text"><i class="fa fa-user"></i></span>
			</div>
			<%= user_form.text_field :name,placeholder: 'Name',class: 'user-input-field' %>
		</div>
		<div class="form-group input-group user-input">
			<div class="input-group-prepend user-label-input">
				<span class="input-group-text"><i class="fa fa-envelope"></i></span>
			</div>
			<%= user_form.text_field :email,placeholder: 'Email',class: 'user-input-field' %>
		</div>
		<div class="form-group input-group user-input">
			<div class="input-group-prepend user-label-input">
				<span class="input-group-text"><i class="fa fa-key"></i></span>
			</div>
			<%= user_form.password_field :password,placeholder: 'Password',class: 'user-input-field' %>
		</div>
		<div class="form-group input-group user-input">
			<div class="input-group-prepend user-label-input">
				<span class="input-group-text"><i class="fa fa-key"></i></span>
			</div>
			<%= user_form.password_field :password_confirmation,placeholder: 'Confirm Password',class: 'user-input-field' %>
		</div>
		<div class="container-contact100-form-btn">
			<%= user_form.submit 'SAVE',class: 'btn contact100-form-btn' %>
		</div>
		<% end %>
	</div>
</div>
 