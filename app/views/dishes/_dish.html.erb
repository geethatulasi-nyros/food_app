  <div class="card single-dish">
    <%if dish.images.length > 0 %>
      <%= image_tag dish.images[0].image.to_s, class: 'dish-image' %>
    <% else %>
      <%= image_tag "home-2.jpeg", class: 'dish-image' %>
    <% end %>
    <div class="dish-name single-dish-details"><%= dish.name %></div>
    <div class="dish-price single-dish-details"><%= dish.price %></div>
    <div class="dish-rating single-dish-details"><%= dish.reviews.average(:rating) %></div>
    <div class="card-body">
      <div class="card-text dish-description">
        <%= dish.description %>
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to 'Back',dishes_path,class: 'btn btn-warning' %>
        </div>
        <div>
          <%= link_to 'Addreview',new_dish_review_path(dish),class: 'btn btn-info' %>
        </div>
      </div>
      <div class="d-flex justify-content-end social-btns">
        <%= social_share_button_tag(dish.name, :image => "https://www.indianhealthyrecipes.com/wp-content/uploads/2014/11/chicken-curry-recipe.jpg",:desc => dish.description,"data-linkedin-description"=>"my site content") %>
      </div>
    </div>
  </div>
  <div class="reviews-container">
    <% @reviews.each do |r| %>
      <div class="row">
      <%= r.user.name %>
      <%= r.rating %>
      </div>
      <div>
      <%= r.review %>
      </div>
      <hr>
    <% end %>
  </div>