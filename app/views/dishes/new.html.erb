<div class="container form-container">
	<h4 class="text-center create-text">Create Dish</h4>
	<div class="dish-form">
		<%= form_for @dish do |f| %>
		<div class="form-group row">
			<%= f.label :name,class: "col-sm-2 col-form-label" %>
			<div class="col-sm-10">
				<%= f.text_field :name,class: "form-control",required: true %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label :price,class: "col-sm-2 col-form-label" %>
			<div class="col-sm-10">
				<%= f.text_field :price,class: "form-control",required: true %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label :image,class: "col-sm-2 col-form-label" %>
			<%= f.fields_for :images  do |img_fields| %>
			<div class="col-sm-10">
				<%= img_fields.file_field :image,class: "form-control-file",required: true %>
			</div>
		  <% end %>
		</div> 
		<div class="form-group row">
			<%= f.label :description,class: "col-sm-2 col-form-label" %>
			<div class="col-sm-10">
				<%= f.text_area :description,class: "form-control",required: true%>
			</div>
		</div>
		<div class="d-flex justify-content-between">
			<div>
				<%= link_to 'Back',user_session_path,class: "btn btn-warning" %>
			</div>
			<div> 
				<%= f.submit 'Post',class: "btn btn-info"%>
			</div>
		</div>
		<% end %>
	</div>
</div>	 

 