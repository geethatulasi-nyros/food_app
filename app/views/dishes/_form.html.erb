<%= form_for @dish do |f| %>
	<div class="form-group row">
		<%= f.label :name,class: "col-sm-2 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name,class: "form-control",maxlength:30   %>
		</div>
	</div>
	<div class="form-group row">
		<%= f.label :price,class: "col-sm-2 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_field :price,class: "form-control" %>
		</div>
	</div>
	<div class="form-group row">
		<%= f.label :category,class: "col-sm-2 col-form-label" %>
		<div class="col-sm-10">
			<%= f.collection_select :category_id,Category.all,:id,:name,{},{class: 'form-control'} %>
		</div>
	</div>
	<div class="form-group row">
		<%= f.label :image,class: "col-sm-2 col-form-label" %>
		<%= f.fields_for :images  do |img_fields| %>
		<div class="col-sm-10">
			<%= img_fields.file_field :image,class: "form-control-file",name:"dish[image]" %>
			<p id="img-note">Note:jpg,jpeg,png,gif,webp extensions </p>
		</div>
	  <% end %>
	</div> 
	<div class="form-group row">
		<%= f.label :description,class: "col-sm-2 col-form-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description,rows:3,maxlength:200,class: "form-control" %>
		</div>
	</div>
	<div class="d-flex justify-content-between">
		<div>
			<%= link_to 'Back',user_session_path,class: "btn btn-warning" %>
		</div>
		<div> 
			<%= f.submit 'Post',class: "btn btn-info"%>
		</div>
	</div>
<% end %>